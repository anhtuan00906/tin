a = float(input("Nhập chiều dài hình chữ nhật: "))
b = float(input("Nhập chiều rộng hình chữ nhật: "))

chu_vi = 2 * (a + b)
dien_tich = a * b
duong_cheo = (a**2 + b**2)**0.5

print("Chu vi của hình chữ nhật là: ", chu_vi)
print("Diện tích của hình chữ nhật là: ", dien_tich)
print("Độ dài đường chéo của hình chữ nhật là: ", duong_cheo)
